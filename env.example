# 认证配置
# 访问密码（必须设置，用于登录）
ACCESS_PASSWORD=your_password_here

# Session 密钥（用于签名 session cookie）
# 建议使用随机字符串，可以使用以下命令生成：
# openssl rand -base64 32
SESSION_SECRET=change-me-in-production-please-use-random-string

# 可选：密码哈希（如果设置了，将使用哈希验证而不是明文密码）
# 使用以下命令生成：node -e "const bcrypt=require('bcryptjs');bcrypt.hash('your_password',10).then(h=>console.log(h))"
# PASSWORD_HASH=

# 是否启用认证（默认启用，设置为 false 可禁用）
# AUTH_ENABLED=true

# 文件系统访问配置
# 是否启用本地文件系统访问（服务端模式）
ENABLE_LOCAL_FS=true

# 文件目录路径（Docker 环境下使用 /app/files，开发环境使用 ./files）
FILES_DIRECTORY=./files

# Node.js 环境
NODE_ENV=development

# 日志配置
# 日志目录（开发环境使用 ./logs，Docker 环境使用 /app/logs）
LOG_DIR=./logs

# 日志级别（debug, info, warn, error）
LOG_LEVEL=debug
